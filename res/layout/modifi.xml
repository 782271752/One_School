<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modifi_all_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/gray">
    <RelativeLayout 
        android:id="@+id/modifi_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/all_background"
        >
        <TextView 
            android:id="@+id/user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改个人资料"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
   </RelativeLayout>
   <ScrollView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/modifi_title"
       android:scrollbars="none"
       android:fadingEdge="none"
       android:layout_margin="18dp"
       >
          <TableLayout
          		android:id="@+id/MorePageTableLayout_Favorite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="0" >
                
               <TableRow
                   android:id="@+id/more_page_row0"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2.0dip"
                   android:layout_marginRight="2.0dip"
                   android:background="@drawable/more_itemtop_press"
                   >
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:gravity="center_vertical"
					>
					<TextView 
						android:id="@+id/modifi_name_text"
						android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="昵称:"
                        android:textColor="#ff333333"
                        android:textSize="18.0sp" />
						<EditText
                           android:id="@+id/modifi_name"
                           android:layout_width="fill_parent"
                           android:layout_height="match_parent"
                           android:hint="请输入昵称"
                           android:textSize="18.0sp"
                           android:textColor="#ff333333"
                           android:singleLine="true"
                           android:background="@null"
                           android:paddingLeft="10dp"
                           android:layout_toRightOf="@id/modifi_name_text"
                           android:maxLength="15"
                            ></EditText>
				</RelativeLayout>       
                </TableRow>
                 <TableRow
                     android:id="@+id/more_page_row1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2.0dip"
                     android:layout_marginRight="2.0dip"
                     android:background="@drawable/more_itemmiddle_press"
                     >
					<RelativeLayout 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:gravity="center_vertical"
						>
						<TextView 
						   android:id="@+id/modifi_age_text"
						   android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:drawablePadding="10.0dip"
                           android:gravity="center_vertical"
                           android:includeFontPadding="false"
                           android:paddingLeft="10.0dip"
                           android:text="出生:"
                           android:textColor="#ff333333"
                           android:textSize="18.0sp" />
						<TextView
                           android:id="@+id/modifi_age"
                           android:layout_width="fill_parent"
                           android:layout_height="match_parent"
                           android:text="1991-11-24"
                           android:textSize="18.0sp"
                           android:textColor="#ff333333"           
                           android:paddingLeft="10dp"
                           android:layout_toRightOf="@id/modifi_age_text" 
                           android:gravity="center_vertical"                         
                           ></TextView>>
						</RelativeLayout>
                       
                </TableRow>
              <TableRow
                 android:id="@+id/more_page_row2"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="2.0dip"
                 android:layout_marginRight="2.0dip"
                 android:background="@drawable/more_itemmiddle_press">
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:gravity="center_vertical">
					 <TextView 
						 android:id="@+id/modifi_sex_text"
						 android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:drawablePadding="10.0dip"
                         android:gravity="center_vertical"
                         android:includeFontPadding="false"
                         android:paddingLeft="10.0dip"
                         android:text="性别:"
                         android:textColor="#ff333333"
                         android:textSize="18.0sp" />
					 <RadioGroup 
					     android:id="@+id/modifi_group"
					     android:layout_width="fill_parent"
					     android:layout_height="fill_parent"
					     android:layout_toRightOf="@id/modifi_sex_text"
					     android:orientation="horizontal"
					     >
					     <RadioButton
                			android:id="@+id/modi_male_cb"
                			android:layout_width="wrap_content"
                			android:layout_height="fill_parent"
                			android:button="@drawable/login_remember"
                			
                			android:checked="true"
                			android:text="男"
                			android:layout_marginLeft="35dp"
                 			android:textColor="@color/grey"
                 			android:gravity="center_vertical"/>
            			<RadioButton
                			android:id="@+id/modi_female_cb"
               				android:layout_width="wrap_content"
                			android:layout_height="fill_parent"
                			android:layout_marginLeft="30dp"
                			android:button="@drawable/login_remember"
                			android:text="女"
                			android:textColor="@color/grey"
                			android:gravity="center_vertical"
               			 />   
					 </RadioGroup>
					
				</RelativeLayout>
				</TableRow>
			<TableRow
                 android:id="@+id/more_page_row3"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="2.0dip"
                 android:layout_marginRight="2.0dip"
                 android:background="@drawable/more_itemmiddle_press">
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:gravity="center_vertical">
					 <TextView 
						 android:id="@+id/modifi_selfsignature_text"
						 android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:drawablePadding="10.0dip"
                         android:gravity="center_vertical"
                         android:includeFontPadding="false"
                         android:paddingLeft="10.0dip"
                         android:layout_marginTop="4dp"
                         android:text="个性签名:"
                         android:textColor="#ff333333"
                         android:textSize="16.0sp" />
					<EditText
                           android:id="@+id/modifi_signature"
                           android:layout_width="fill_parent"
                           android:layout_height="match_parent"
                           android:hint="写句话让大家认识你吧(最多140字)"
                            
                           android:textSize="12sp"
                           android:textColor="#ff333333"
                           android:singleLine="true"
                           android:background="@null"
                           android:paddingLeft="10dp"
                           android:layout_below="@id/modifi_selfsignature_text"
                           android:maxLength="140"
                           android:ellipsize="end"
         					
                           ></EditText>
				</RelativeLayout>
				</TableRow>
				<TableRow
                     android:id="@+id/more_page_row4"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2.0dip"
                     android:layout_marginRight="2.0dip"
                     android:background="@drawable/more_itemmiddle_press"
                     >
					<RelativeLayout 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:gravity="center_vertical"
						>
						<TextView 
						   android:id="@+id/modifi_province_text"
						   android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:drawablePadding="10.0dip"
                           android:gravity="center_vertical"
                           android:includeFontPadding="false"
                           android:paddingLeft="10.0dip"
                           android:text="省份:"
                           android:textColor="#ff333333"
                           android:textSize="18.0sp" />
						<Spinner
                           android:id="@+id/modifi_province"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"                           
                           android:layout_toRightOf="@id/modifi_province_text" 
  						   android:layout_margin="5dp"		
  						   android:background="@color/white"			    
                          />
						</RelativeLayout>
                       
                </TableRow>
               <TableRow
                     android:id="@+id/more_page_row5"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2.0dip"
                     android:layout_marginRight="2.0dip"
                     android:background="@drawable/more_itembottom_press"
                     >
					<RelativeLayout 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:gravity="center_vertical"
						>
						<TextView 
						   android:id="@+id/modifi_school_text"
						   android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:drawablePadding="10.0dip"
                           android:gravity="center_vertical"
                           android:includeFontPadding="false"
                           android:paddingLeft="10.0dip"
                           android:text="学校:"
                           android:textColor="#ff333333"
                           android:textSize="18.0sp" />
						<AutoCompleteTextView
                           android:id="@+id/modifi_school"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"                           
                           android:completionHint="t拖动选择你的学校"
                           android:layout_toRightOf="@id/modifi_school_text"
                           android:dropDownHorizontalOffset="20dp"
    					   android:completionThreshold="1" 
  						   android:background="@null"
  						   android:textSize="18.0sp"
                           android:textColor="#ff333333"
                           android:paddingLeft="10dp"
                          />
						</RelativeLayout>
                       
                </TableRow>
                
                <Button
	    			android:id="@+id/modifi_save"
	    			android:layout_width="fill_parent"
	    			android:layout_height="40dp"
	    			android:layout_marginTop="20dp"
	    			android:gravity="center"   
	    			android:text="保存"
	    			android:textSize="18sp"
	   				android:background="@drawable/blue_to_orange"
	   				android:textColor="@color/white"
	   				 
	   		 		/>
                </TableLayout>
       
   </ScrollView>
</RelativeLayout>