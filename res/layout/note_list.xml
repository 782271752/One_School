<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >

    <ImageView
        android:id="@+id/note_list_head"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_margin="8dip" 
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/news_item_background"
        android:orientation="vertical"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="8dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/note_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff397cbf"
                android:textSize="18sp"
                android:textStyle="bold" 
                android:text="同校网"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingRight="4dip"
                android:singleLine="true"
                android:textColor="#ff999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/note_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffaaaaaa"
                android:text="2013-6-2"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/note_list_context"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="16sp" 
            android:text="登陆同校网应用尽有登陆同校网应用尽有登陆同校网应用尽有登陆同校网应用尽有登陆同校网应用尽有登陆同校网应用尽有登陆同校网应用尽有"
            android:paddingTop="4dip"
            android:paddingBottom="4dip"/>

        <ImageView
            android:id="@+id/note_list_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:src="@drawable/hotel"
            android:visibility="gone"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

             

            <TextView
                android:id="@+id/note_list_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/note_comment"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="14sp" />

            <View
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/note_list_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/thumbs_up"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="14sp" />
            
            <View
                android:layout_width="2px"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/note_list_share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:drawableLeft="@drawable/note_share"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffbbbbbb"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>