<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray">
    <RelativeLayout 
        android:id="@+id/sort_title_layout"
        android:layout_width="fill_parent"
       	android:layout_height="40dp"
       	android:background="@color/blue"
    	android:gravity="center_vertical"	
        >
        <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="分类"
           android:textSize="20dp"
           android:textColor="@color/white"
           android:layout_centerInParent="true"
            />
   	</RelativeLayout>
   	<RelativeLayout 
        android:id="@+id/sort_black_layout"
        android:layout_width="fill_parent"
       	android:layout_height="120dp"
       	android:layout_below="@id/sort_title_layout"
    	android:gravity="center"	
    	android:background="@drawable/sky"
        >
        <ImageView
            android:id="@+id/sort_black"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:scaleType="centerInside"
        	android:src="@drawable/black"
            ></ImageView>
   	</RelativeLayout>
   	<ImageView 
   	    android:id="@+id/sort_line"
		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:background="@color/note_gray" 
		android:layout_below="@id/sort_black_layout"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		 />
   	 
     <GridView  
	    android:layout_below="@id/sort_line"
    	android:id="@+id/sort_gridview"
    	android:padding="10dp"
    	android:layout_marginBottom="10dp"
    	android:layout_width="fill_parent"  
    	android:layout_height="wrap_content"
    	android:listSelector="@color/gray"
    	android:numColumns="2"
    	android:stretchMode="columnWidth"
     	android:gravity="center"
    	android:scrollbars="@null"  
    	android:horizontalSpacing="5dp"
    	android:verticalSpacing="10dp"
    	/>
        
   	    	 
 
</RelativeLayout>  
    
     
 