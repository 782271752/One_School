<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout 
        android:id="@+id/youji_detail_title_layout"
        android:layout_width="fill_parent"
       	android:layout_height="40dp"
       	android:background="@drawable/all_background"
    	android:gravity="center_vertical"	
        >
        <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="游记内容"
           android:textSize="20sp"
           android:textColor="@color/white"
           android:layout_centerInParent="true"
            />
   	</RelativeLayout>
   	<ScrollView 
	    android:id="@+id/youji_detail_scroll" 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_below="@id/youji_detail_title_layout"
		android:scrollbarStyle="@null"
		android:background="@color/gray"
		android:fadingEdge="none">	 
        <LinearLayout
        	android:layout_width="fill_parent"    
        	android:layout_height="wrap_content"
        	android:orientation="vertical">
       		<RelativeLayout       		     
       		    android:layout_width="fill_parent"
       		    android:layout_height="wrap_content"
       		     
       		    android:layout_margin="2dp"
       		    >
       		    <RelativeLayout 
       		        android:id="@+id/youji_detail_name_layout"
       		        android:layout_width="fill_parent"
       		        android:layout_height="wrap_content"
       		        >
       		        <TextView 
       		            android:id="@+id/youji_detail_name"
       		            android:layout_width="fill_parent"
       		            android:layout_height="wrap_content"
       		            android:gravity="center"
       		            android:text="五月，走进梦里的凤凰古城！"
       		            android:textColor="@color/grey21"
       		            android:textSize="18sp"
       		            />
       		    </RelativeLayout>
       		    
       		    <RelativeLayout 
       		        android:id="@+id/youji_detail_time_layout"
       		        android:layout_width="fill_parent"
       		        android:layout_height="wrap_content"
       		        android:layout_below="@id/youji_detail_name_layout"
       		        android:padding="4dp"
       		        >
       		        <TextView 
       		            android:id="@+id/youji_detail_time"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:layout_alignParentRight="true"
       		            android:text="2013-04-30"
       		            android:textColor="@color/brown"
       		            android:textSize="14sp"
       		            />
       		    </RelativeLayout>
       		    
       		    <RelativeLayout 
       		        android:id="@+id/youji_detail_destination_layout"
       		    	android:layout_below="@id/youji_detail_time_layout"    
       		    	android:layout_width="fill_parent"
       		    	android:layout_height="wrap_content"
       		    	android:padding="2dp"
       		    	android:gravity="center_horizontal"
       		    >
       		        <TextView 
       		            android:id="@+id/youji_detail_start_text"
       		            android:text="出发地:"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:textColor="@color/grey21"
       		            android:textSize="14sp"
       		             
       		            />
       		        <TextView 
       		            android:layout_toRightOf="@id/youji_detail_start_text"
       		            android:id="@+id/youji_detail_start"
       		            android:layout_width="match_parent"
       		            android:layout_height="wrap_content"
       		            android:text="广州"
       		            android:textColor="@color/brown"
       		            android:textSize="14sp"
       		            android:layout_marginLeft="4dp"
       		            />
       		        <TextView 
       		            android:layout_below="@id/youji_detail_start_text"
       		            android:id="@+id/youji_detail_destination_text"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:text="目的地:"
       		            android:textColor="@color/grey21"
       		            android:textSize="14sp"
       		            
       		            />
       		        <TextView
       		        	android:layout_toRightOf="@id/youji_detail_destination_text"
       		        	android:layout_below="@id/youji_detail_start_text"
       		        	android:id="@+id/youji_detail_destination"
       		        	android:layout_width="match_parent"
       		        	android:layout_height="wrap_content"
       		        	android:text="四川九寨沟"
       		        	android:textColor="@color/brown"
       		        	android:textSize="14sp"
       		        	android:layout_marginLeft="4dp"
       		        ></TextView>
       		        
       		        <TextView 
       		            android:layout_below="@id/youji_detail_destination"
       		            android:id="@+id/youji_detail_days_text"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:text="行程:"
       		            android:textColor="@color/grey21"
       		            android:textSize="14sp"
       		            
       		            />
       		        <TextView 
       		            android:layout_toRightOf="@id/youji_detail_days_text"
       		            android:layout_below="@id/youji_detail_destination"
       		            android:id="@+id/youji_detail_days"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:text="3天"
       		            android:textColor="@color/brown"
       		            android:textSize="14sp"
       		            android:layout_marginLeft="4dp"
       		            />
       		    </RelativeLayout>
       		    
       		    
       		    <RelativeLayout 
       		        android:layout_below="@id/youji_detail_destination_layout"
       		        android:layout_width="fill_parent"
       		        android:layout_height="wrap_content"
       		        android:padding="2dp"
       		    	android:gravity="center_horizontal"
       		        >
       		        <TextView 
       		            android:id="@+id/youji_detail_groups_text"
       		            android:text="结伴方式:"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:textColor="@color/grey21"
       		            android:textSize="14sp"
       		             
       		            />
       		        <TextView 
       		            android:layout_toRightOf="@id/youji_detail_groups_text"
       		            android:id="@+id/youji_detail_groups"
       		            android:layout_width="match_parent"
       		            android:layout_height="wrap_content"
       		            android:text="情侣"
       		            android:textColor="@color/brown"
       		            android:textSize="14sp"
       		            android:layout_marginLeft="4dp"
       		            />
       		        <TextView 
       		            android:layout_below="@id/youji_detail_groups_text"
       		            android:id="@+id/youji_detail_starttime_text"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:text="出发时间:"
       		            android:textColor="@color/grey21"
       		            android:textSize="14sp"
       		             
       		            />
       		        <TextView
       		        	android:layout_toRightOf="@id/youji_detail_starttime_text"
       		        	android:layout_below="@id/youji_detail_groups_text"
       		        	android:id="@+id/youji_detail_starttime"
       		        	android:layout_width="match_parent"
       		        	android:layout_height="wrap_content"
       		        	android:text="2013-04-07"
       		        	android:textColor="@color/brown"
       		        	android:textSize="14sp"
       		        	android:layout_marginLeft="4dp"
       		        ></TextView>
       		        
       		        <TextView 
       		             
       		            android:layout_below="@id/youji_detail_starttime_text"
       		            android:id="@+id/youji_detail_costs_text"
       		            android:layout_width="wrap_content"
       		            android:layout_height="wrap_content"
       		            android:text="人均消费:"
       		            android:textColor="@color/grey21"
       		            android:textSize="14sp"
       		             
       		            />
       		        <TextView 
       		            android:layout_toRightOf="@id/youji_detail_costs_text"
       		            android:layout_below="@id/youji_detail_starttime_text"
       		            android:id="@+id/youji_detail_costs"
       		            android:layout_width="match_parent"
       		            android:layout_height="wrap_content"
       		            android:text="1500 元"
       		            android:textColor="@color/brown"
       		            android:textSize="14sp"
       		            android:layout_marginLeft="4dp"
       		            />
       		    </RelativeLayout>
       		    
       		</RelativeLayout>
            <WebView    
                   	 
   		    	android:layout_margin="4dp"
        		android:id="@+id/youji_webview"      	
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:scrollbars="none"       
        		android:layout_marginBottom="35dp"
        	/>
        </LinearLayout>
   	    
   		 
    </ScrollView>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
        android:layout_alignParentBottom="true"
        >
   		 <LinearLayout 
   		     android:layout_width="fill_parent"
   		     android:layout_height="wrap_content"
   		     android:orientation="horizontal"
   		     >
   		     <Button 
        		android:id="@+id/youji_detail_comment"
        		android:layout_width="wrap_content"
        		android:layout_height="35dp" 	
        		 	 
        		android:text="评论"
        		android:textSize="18sp"
        		android:textColor="@color/white"
        		android:background="@drawable/blue_to_orange"
        		android:layout_weight="1"
        	/>
         	<Button 
        		android:id="@+id/youji_detail_share"
        		android:layout_width="wrap_content"
        		android:layout_height="35dp" 	
        		android:layout_weight="1"
        		android:text="分享"
        		 
        		android:textSize="18sp"
        		android:textColor="@color/white"
        		android:background="@drawable/blue_to_orange"/>
         
         	<Button 
        		android:id="@+id/youji_detail_like"
        		android:layout_width="wrap_content"
        		android:layout_height="35dp" 	
        	 	android:layout_weight="1"
        		android:text="喜欢"
        		 
        		android:textSize="18sp"
        		android:textColor="@color/white"
        		android:background="@drawable/blue_to_orange"/>
   		 </LinearLayout>     
    </RelativeLayout>
</RelativeLayout>