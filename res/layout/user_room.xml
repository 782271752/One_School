<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/ab_solid_custom_blue_inverse_holo"
        android:orientation="horizontal" >
		
       <ImageView
            android:id="@+id/user_room_back"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/ab_solid_custom_blue_inverse_holo"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

		<View
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:layout_toRightOf="@id/user_room_back"
            android:background="#fff0f0f0" />
       
        <TextView
            android:id="@+id/write_title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            
            android:paddingLeft="8dip"
            android:text="空间"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        </RelativeLayout>
        <ScrollView 
       		android:layout_width="fill_parent"
       		android:layout_height="fill_parent"
       		android:scrollbars="none"
       		android:fadingEdge="none">
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                
                <RelativeLayout
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content" >

        			<ImageView
           	 			android:id="@+id/friendinfo_head_wallpager"
            			android:layout_width="fill_parent"
            			android:layout_height="220dp"
            			android:src="@drawable/maerdaifuone"
            			android:scaleType="centerCrop" />

        				<RelativeLayout
            				android:layout_width="fill_parent"
            				android:layout_height="wrap_content"
            				android:layout_alignBottom="@+id/friendinfo_head_wallpager"
            				android:background="@drawable/profile_avatar_frame_bg"
            				android:paddingLeft="8dip"
            				android:paddingTop="47dip" >

            				<ImageView
                				android:id="@+id/user_room_head"
                				android:layout_width="74dip"
                				android:layout_height="74dip"
                				android:layout_marginLeft="4dip"
                				android:layout_marginTop="4dip"
                				android:src="@drawable/logo"
                				android:background="@drawable/avatar_background" />

            					<TextView
                					android:id="@+id/user_room_username"
                					android:layout_width="wrap_content"
                					android:layout_height="wrap_content"
                					android:layout_alignTop="@+id/user_room_head"
                					android:layout_marginLeft="8dip"
                					android:layout_marginTop="4dip"
                					android:layout_toRightOf="@+id/user_room_head"
                					android:shadowColor="#ff000000"
                					android:shadowDx="0.0"
                					android:text="同校网"
                					android:shadowDy="1.0"
               	 					android:shadowRadius="1.0"
                					android:singleLine="true"
                					android:textColor="#FFFFFF"
                					android:textSize="19sp"
                					android:textStyle="bold" />

            					<LinearLayout
                					android:id="@+id/friendinfo_head_gender_layout"
                					android:layout_width="fill_parent"
                					android:layout_height="wrap_content"
                					android:layout_alignLeft="@+id/user_room_username"
                					android:layout_below="@+id/user_room_username"
                					android:layout_marginBottom="4dip"
                					android:layout_marginTop="4dip"
                					android:gravity="center_vertical"
                					android:orientation="horizontal" >

                					<ImageView
                    					android:id="@+id/user_room_user_gender"
                   	 					android:layout_width="wrap_content"
                    					android:layout_height="wrap_content" 
                    					android:src="@drawable/profile_icon_boy"
                    					/>

                					<TextView
                    					android:id="@+id/user_room_age"
                    					android:layout_width="wrap_content"
                    					android:layout_height="wrap_content"
                    					android:shadowColor="#ff000000"
                    					android:shadowDx="0.0"
                    					android:shadowDy="1.0"
                    					android:shadowRadius="1.0"
                    					android:singleLine="true"
                    					android:textColor="#FFFFFF"
                    					android:text="1991-11-24"
                    					android:textSize="11sp"
                    					android:textStyle="bold" />
            				</LinearLayout>
            
            				<ImageView
                				android:id="@+id/friendinfo_head_gifts"
                				android:layout_width="40dip"
                				android:layout_height="40dip"
                				android:layout_above="@+id/friendinfo_head_sig_layout"
                				android:layout_toLeftOf="@+id/friendinfo_head_chat"
                				android:src="@drawable/profile_gifts_btn_bg_selector"    
                				android:visibility="invisible"
                				android:clickable="true" />

            			<ImageView
                				android:id="@+id/friendinfo_head_chat"
                				android:layout_width="40dip"
                				android:layout_height="40dip"
                				android:layout_alignParentRight="true"
                				android:layout_above="@+id/friendinfo_head_sig_layout"        
                				android:visibility="invisible"      
        						android:src="@drawable/profile_chat_btn_bg_selector"         
                				android:clickable="true"/>

            

            			<LinearLayout
                				android:id="@+id/friendinfo_head_sig_layout"
                				android:layout_width="fill_parent"
                				android:layout_height="wrap_content"
                				android:layout_alignLeft="@+id/friendinfo_head_gender_layout"
                				android:layout_below="@+id/friendinfo_head_gender_layout" >

                		<TextView
                    			android:id="@+id/friendinfo_head_sig"
                    			android:layout_width="wrap_content"
                    			android:layout_height="wrap_content"
                    			android:gravity="center_vertical"
                    			android:paddingRight="8dip"
                    			android:singleLine="true"
                    			android:textColor="#ffb4b4b4"
                    			android:text="吃了个大亏，骂了隔壁的"
                    			android:textSize="12sp" />
            		</LinearLayout>
        		</RelativeLayout>
    	</RelativeLayout>

    	<LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="#fffafafa"
        	android:orientation="horizontal"
        	android:padding="8dip" >

        	<TextView
            	android:id="@+id/friendinfo_head_about"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:drawableTop="@drawable/user_information"
            	android:gravity="center"
            	android:textColor="#ff999999"
            	android:text="信息"
            	android:textSize="12sp" />
        	<View
            	android:layout_width="2px"
            	android:layout_height="fill_parent"
            	android:layout_margin="2dip"
            	android:background="#fff0f0f0" />

        	<TextView
            	android:id="@+id/friendinfo_head_photo"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:drawableTop="@drawable/user_information"
            	android:gravity="center"
            	android:textColor="#ff999999"
            	android:text="吐槽"
            	android:textSize="12sp" />
			<View
            	android:layout_width="2px"
            	android:layout_height="fill_parent"
            	android:layout_margin="2dip"
            	android:background="#fff0f0f0" />
        	<TextView
            	android:id="@+id/friendinfo_head_diary"
            	android:layout_width="wrap_content"
           	 	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:drawableTop="@drawable/sos"
            	android:gravity="center"
            	android:textColor="#ff999999"
            	android:text="帮忙"
            	android:textSize="12sp" />
			<View
            	android:layout_width="2px"
            	android:layout_height="fill_parent"
            	android:layout_margin="2dip"
            	android:background="#fff0f0f0" />
        	<TextView
            	android:id="@+id/friendinfo_head_friends"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
            	android:drawableTop="@drawable/user_information"
            	android:gravity="center"
            	android:textColor="#ff999999"
            	android:text="许愿"
            	android:textSize="12sp" />
    	</LinearLayout>

    	<View
        	android:layout_width="fill_parent"
        	android:layout_height="1px"
        	android:background="@color/grey" />
    	<li.widget.CommentListView
   	    	android:id="@+id/user_room_note_list"	
   	    	android:layout_width="fill_parent"
   	    	android:layout_height="match_parent"
   	    	android:background="@color/white"
   	    	android:cacheColorHint="@color/white"
   	    	android:listSelector="@color/gray"
   	    	></li.widget.CommentListView>

      </LinearLayout>
    </ScrollView>
</LinearLayout>