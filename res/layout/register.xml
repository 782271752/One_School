<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    >
    <RelativeLayout
        android:id="@+id/regist_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/ab_solid_custom_blue_inverse_holo"
        android:orientation="horizontal" >
		
       <ImageView
            android:id="@+id/regist_back"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/back_button"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />
		<View
		    android:layout_toRightOf="@id/regist_back"
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:src="@drawable/v5_0_1_flipper_head_separator"
            android:background="#fff0f0f0" />
       
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="8dip"
            android:text="注册账号"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        </RelativeLayout>
    <ScrollView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/regist_title"
       android:scrollbars="none"
       android:fadingEdge="none"
       android:layout_margin="18dp"
       >
       
        <TableLayout
          		android:id="@+id/registTableLayout_Favorite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="0" >
                
             <TableRow
     			android:id="@+id/regist_page_row7"
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:layout_marginLeft="2.0dip"
            	android:layout_marginRight="2.0dip"
            	android:background="@drawable/more_itemtop_press">
				<AutoCompleteTextView
            		android:id="@+id/regist_email"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textSize="18.0sp"
                    android:textColor="#ff333333"
                    android:singleLine="true"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
            		android:hint="请输入注册邮箱"
            		android:inputType="textEmailAddress"/>
                </TableRow>
                <TableRow
     				android:id="@+id/regist_page_row8"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:layout_marginLeft="2.0dip"
            		android:layout_marginRight="2.0dip"
            		android:background="@drawable/more_itemmiddle_press">
                    <EditText 
            			android:id="@+id/regist_first_password"
            			android:layout_width="fill_parent"
            			android:layout_height="match_parent"
            			android:hint="请输入密码"
            			android:singleLine="true"
            			android:inputType="textPassword"
     					android:textSize="18.0sp"
                        android:textColor="#ff333333"
                        android:background="@null"
                        android:paddingLeft="10dp"
                        android:maxLength="15"/>
                </TableRow>
                 <TableRow
     				android:id="@+id/regist_page_row9"
            		android:layout_width="fill_parent"
            		android:layout_height="wrap_content"
            		android:layout_marginLeft="2.0dip"
            		android:layout_marginRight="2.0dip"
            		android:background="@drawable/more_itemmiddle_press">
                      <EditText
            				android:id="@+id/regist_second_password"
            				android:layout_width="fill_parent"
            				android:layout_height="match_parent"
            				android:hint="确认密码"
            				android:singleLine="true"
            				android:inputType="textPassword"
            				android:textColor="#ff333333"
                        	android:background="@null"
                        	android:paddingLeft="10dp"
                        	android:maxLength="15"
             		 ></EditText>
                 </TableRow>
               <TableRow
                   android:id="@+id/regist_page_row0"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="2.0dip"
                   android:layout_marginRight="2.0dip"
                   android:background="@drawable/more_itemmiddle_press"
                   >
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:gravity="center_vertical"
					>
					<TextView 
						android:id="@+id/regist_name_text"
						android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:drawablePadding="10.0dip"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingLeft="10.0dip"
                        android:text="昵称:"
                        android:textColor="#ff333333"
                        android:textSize="18.0sp" />
						<EditText
                           android:id="@+id/regist_name"
                           android:layout_width="fill_parent"
                           android:layout_height="match_parent"
                           android:hint="请输入昵称"
                           android:textSize="18.0sp"
                           android:textColor="#ff333333"
                           android:singleLine="true"
                           android:background="@null"
                           android:paddingLeft="10dp"
                           android:layout_toRightOf="@id/regist_name_text"
                           android:maxLength="15"
                            ></EditText>
				</RelativeLayout>       
                </TableRow>
                 <TableRow
                     android:id="@+id/regist_page_row1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2.0dip"
                     android:layout_marginRight="2.0dip"
                     android:background="@drawable/more_itemmiddle_press"
                     >
					<RelativeLayout 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:gravity="center_vertical"
						>
						<TextView 
						   android:id="@+id/regist_age_text"
						   android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:drawablePadding="10.0dip"
                           android:gravity="center_vertical"
                           android:includeFontPadding="false"
                           android:paddingLeft="10.0dip"
                           android:text="出生:"
                           android:textColor="#ff333333"
                           android:textSize="18.0sp" />
						<TextView
                           android:id="@+id/regist_age"
                           android:layout_width="fill_parent"
                           android:layout_height="match_parent"
                           android:text="1991-11-24"
                           android:textSize="18.0sp"
                           android:textColor="#ff333333"           
                           android:paddingLeft="10dp"
                           android:layout_toRightOf="@id/regist_age_text" 
                           android:gravity="center_vertical"                         
                           ></TextView>>
						</RelativeLayout>
                       
                </TableRow>
              <TableRow
                 android:id="@+id/regist_page_row2"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="2.0dip"
                 android:layout_marginRight="2.0dip"
                 android:background="@drawable/more_itemmiddle_press">
				<RelativeLayout 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:gravity="center_vertical">
					 <TextView 
						 android:id="@+id/regist_sex_text"
						 android:layout_width="wrap_content"
                         android:layout_height="fill_parent"
                         android:drawablePadding="10.0dip"
                         android:gravity="center_vertical"
                         android:includeFontPadding="false"
                         android:paddingLeft="10.0dip"
                         android:text="性别:"
                         android:textColor="#ff333333"
                         android:textSize="18.0sp" />
					 <RadioGroup 
					     android:id="@+id/regist_group"
					     android:layout_width="fill_parent"
					     android:layout_height="fill_parent"
					     android:layout_toRightOf="@id/regist_sex_text"
					     android:orientation="horizontal"
					     >
					     <RadioButton
                			android:id="@+id/regist_male_cb"
                			android:layout_width="wrap_content"
                			android:layout_height="fill_parent"
                			android:button="@drawable/login_remember"
                			
                			android:checked="true"
                			android:text="男"
                			android:layout_marginLeft="35dp"
                 			android:textColor="@color/grey"
                 			android:gravity="center_vertical"/>
            			<RadioButton
                			android:id="@+id/regist_female_cb"
               				android:layout_width="wrap_content"
                			android:layout_height="fill_parent"
                			android:layout_marginLeft="30dp"
                			android:button="@drawable/login_remember"
                			android:text="女"
                			android:textColor="@color/grey"
                			android:gravity="center_vertical"
               			 />   
					 </RadioGroup>
					
				</RelativeLayout>
				</TableRow>
			 
				<TableRow
                     android:id="@+id/regist_page_row4"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2.0dip"
                     android:layout_marginRight="2.0dip"
                     android:background="@drawable/more_itemmiddle_press"
                     >
					<RelativeLayout 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:gravity="center_vertical"
						>
						<TextView 
						   android:id="@+id/regist_province_text"
						   android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:drawablePadding="10.0dip"
                           android:gravity="center_vertical"
                           android:includeFontPadding="false"
                           android:paddingLeft="10.0dip"
                           android:text="省份:"
                           android:textColor="#ff333333"
                           android:textSize="18.0sp" />
						<Spinner
                           android:id="@+id/regist_province"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"                           
                           android:layout_toRightOf="@id/regist_province_text" 
  						   android:layout_margin="5dp"		
  						   android:background="@color/white"			    
                          />
						</RelativeLayout>
                       
                </TableRow>
               <TableRow
                     android:id="@+id/regist_page_row5"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2.0dip"
                     android:layout_marginRight="2.0dip"
                     android:background="@drawable/more_itembottom_press"
                     >
					<RelativeLayout 
						android:layout_width="fill_parent"
						android:layout_height="fill_parent" 
						android:gravity="center_vertical"
						>
						<TextView 
						   android:id="@+id/regist_school_text"
						   android:layout_width="wrap_content"
                           android:layout_height="fill_parent"
                           android:drawablePadding="10.0dip"
                           android:gravity="center_vertical"
                           android:includeFontPadding="false"
                           android:paddingLeft="10.0dip"
                           android:text="学校:"
                           android:textColor="#ff333333"
                           android:textSize="18.0sp" />
						<AutoCompleteTextView
                           android:id="@+id/regist_school"
                           android:layout_width="fill_parent"
                           android:layout_height="fill_parent"                           
                           android:completionHint="t拖动选择你的学校"
                           android:layout_toRightOf="@id/regist_school_text"
                           android:dropDownHorizontalOffset="20dp"
    					   android:completionThreshold="1" 
  						   android:background="@null"
  						   android:textSize="18.0sp"
                           android:textColor="#ff333333"
                           android:paddingLeft="10dp"
                          />
						</RelativeLayout>
                       
                </TableRow>
                
                <Button
	    			android:id="@+id/regist_regist_button"
	    			android:layout_width="fill_parent"
	    			android:layout_height="40dp"
	    			android:layout_marginTop="20dp"
	    			android:gravity="center"   
	    			android:text="注册同校网"
	    			android:textSize="18sp"
	   				android:background="@drawable/blue_to_orange"
	   				android:textColor="@color/white"
	   				 
	   		 		/>
                </TableLayout>
    </ScrollView>
    
       
        
       
    
    
</RelativeLayout>