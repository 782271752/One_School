<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/part_time_job_detail_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/ab_solid_custom_blue_inverse_holo"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/part_time_job_detail_back"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/back_button"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />
		<View
		    android:layout_toRightOf="@id/part_time_job_detail_back"
            android:layout_width="2px"
            android:layout_height="fill_parent"
            android:layout_margin="2dip"
            android:src="@drawable/v5_0_1_flipper_head_separator"
            android:background="#fff0f0f0" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
   	<ScrollView 
	    android:id="@+id/part_time_job_detail_scroll" 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_below="@id/part_time_job_detail_title_layout"
		 
		android:fadingEdge="none">	 
		
   	    <LinearLayout
   	        android:layout_width="fill_parent"
   	        android:layout_height="wrap_content"
   	        android:orientation="vertical"
   	         
   	        >
   	        <TextView 
   	            android:layout_marginLeft="5dp"
   	            android:id="@+id/part_time_job_detail_name"
   	            android:layout_width="fill_parent"
   	            android:layout_height="wrap_content"
   	            android:text="大学生兼职家教"
   	            android:textColor="@color/grey21"       		 
        		android:textSize="20sp"
        		android:padding="4dp"
        		android:gravity="center_vertical|center_horizontal"
   	            />
   	      <LinearLayout 
   	          	android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:gravity="right"
        		>
   	          
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_time"   	             
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:gravity="right"
   	            	android:text="2013-5-19"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="16sp"
        			android:drawableLeft="@drawable/deadline"
        			android:drawablePadding="4dp"
        			android:padding="4dp" />
   	        </LinearLayout>
   	        
   	        
   	        
   	        <ImageView  
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:background="@color/note_gray" />
   	        <LinearLayout
   	            android:layout_marginTop="8dp"
   	            android:layout_width="fill_parent"
   	            android:layout_height="wrap_content"
   	            android:layout_marginLeft="5dp"
   	            android:orientation="horizontal" >

   	            <TextView
   	                android:layout_width="wrap_content"
   	                android:layout_height="wrap_content"
   	                android:padding="2dp"
   	                android:text="消息发布来自:"
   	                android:textColor="@color/grey"
   	                android:textSize="14sp" />

   	            <TextView 
   	            	android:id="@+id/part_time_job_detail_boss"
   	            	android:layout_marginLeft="5dp"
   	            	android:layout_width="fill_parent"
   	            	android:layout_height="wrap_content"
   	            	android:text="肇庆正作家教服务中心"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
   	            />
   	        </LinearLayout>
   	        

   	        <LinearLayout
   	            android:layout_width="fill_parent"
   	            android:layout_height="wrap_content"
   	            android:layout_marginLeft="5dp"
   	            android:orientation="horizontal" >

   	            <TextView
   	                android:id="@+id/part_time_job_detail_place_text"
   	                android:layout_width="wrap_content"
   	                android:layout_height="wrap_content"
   	                android:padding="2dp"
   	                android:text="工作区域:"
   	                android:textColor="@color/grey"
   	                android:textSize="14sp" />

   	            <TextView
   	                android:id="@+id/part_time_job_detail_place"
   	                android:layout_width="wrap_content"
   	                android:layout_height="wrap_content"
   	                android:padding="2dp"
   	                android:text="端州区"
   	                android:textColor="@color/orange"
   	                android:textSize="14sp" />
   	        </LinearLayout>
   	        
   	        <!-- LinearLayout 
   	            android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_week_text"
   	            
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="工作星期:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp"/>
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_week"
   	            
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="星期日、星期一、星期二、星期三"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"/>
   	        </LinearLayout-->
   	        
   	         <LinearLayout 
   	            android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_money_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="工作酬薪:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_money"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="9.8 元/小时"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        </LinearLayout>
   	        
   	         <LinearLayout 
   	            android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_num_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="招聘人数:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_num"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="3人"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        </LinearLayout>
   	        
   	         <LinearLayout 
   	            android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_days_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="工作天数:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_days"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="7 天"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        </LinearLayout>
   	        
   	         <LinearLayout 
   	            android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_work_time_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="工作时间段:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_work_time"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="09:00-11:00"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        </LinearLayout>
   	         
   	         <LinearLayout 
   	            android:layout_marginLeft="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_sex_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="性别要求:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_sex"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="女"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        </LinearLayout>
   	         
   	         <LinearLayout 
   	            android:layout_marginLeft="5dp"
   	            android:layout_marginRight="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:background="@color/white"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	        	     
   	            	android:id="@+id/part_time_job_detail_longtel_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="长号:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_longtel"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="13760048757"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        	
   	        	<Button 
   		        	android:id="@+id/part_time_job_detail_longphone"
   		        	android:layout_width="wrap_content"
   		        	android:layout_height="wrap_content"
   		        	android:background="@drawable/phone_button"
   		        	android:layout_marginLeft="10dp"/>
   	        </LinearLayout>
   	        
   	          <LinearLayout 
   	              android:id="@+id/part_time_job_detail_shortlayout"
   	            android:layout_marginLeft="5dp"
   	            android:layout_marginRight="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:background="@color/white"
        		android:orientation="horizontal"> 
   	        	<TextView 
   	        	    
   	            	android:id="@+id/part_time_job_detail_shorttel_text"
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="短号:"
   	            	android:textColor="@color/grey"       		 
        			android:textSize="14sp"
        			android:padding="2dp" />
   	        	<TextView 
   	            	android:id="@+id/part_time_job_detail_shorttel"
   	   
   	            	android:layout_width="wrap_content"
   	            	android:layout_height="wrap_content"
   	            	android:text="658757"
   	            	android:textColor="@color/orange"       		 
        			android:textSize="14sp"
        			android:padding="2dp"
   	            />
   	        	
   	        	<Button 
   		        	android:id="@+id/part_time_job_detail_shortphone"
   		        	android:layout_width="wrap_content"
   		        	android:layout_height="wrap_content"
   		        	android:background="@drawable/phone_button"
   		        	android:layout_marginLeft="10dp"/>
   	        </LinearLayout>
   	         <ImageView  
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:layout_marginTop="5dp"
				android:background="@color/note_gray" />
   	         
   	         <TextView 
   	            android:id="@+id/part_time_job_detail_describe_text"
   	            android:layout_width="fill_parent"
   	            android:layout_height="wrap_content"
   	            android:text="详细信息"
   	            android:textColor="@color/grey21"       		 
        		android:textSize="18sp"
        		android:padding="4dp"
   	            />
   	         
   	         <WebView 
				android:id="@+id/part_time_job_detail_describe"
				android:layout_marginLeft="5dp"
   	            android:layout_marginRight="5dp"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:background="@color/gray"
				android:visibility="gone"
				 />

   	         <ProgressBar
   	             android:id="@+id/part_time_job_detail_progressBar"
   	             android:layout_width="fill_parent"
   	             android:layout_height="wrap_content" 
   	             android:layout_gravity="center_horizontal"
   	             />
   	         
   	         <ImageView  
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:layout_marginTop="5dp"
				android:background="@color/note_gray" />
   	         
   	        
   	    </LinearLayout>
   	    
   	    
	</ScrollView>
</RelativeLayout>