<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <RelativeLayout 
        android:id="@+id/message_title_layout"
        android:layout_width="fill_parent"
       	android:layout_height="45dp"
       	android:background="@drawable/ab_solid_custom_blue_inverse_holo"
    	android:gravity="center_vertical"	
        >
        <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="消息"
           android:textSize="20sp"
           android:textColor="@color/white"
           android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/message_refresh"
            android:layout_width="54dp"
            android:layout_height="fill_parent"             
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/refresh_button" />
   	</RelativeLayout>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:onClick="true"
   	    android:background="@drawable/message_list_item_bg"
   	    android:padding="5dp"
   	    >
   	    <ImageView 
   	        android:layout_width="55dp"
   	        android:layout_height="55dp"
   	        android:src="@drawable/mail"
   	        android:padding="10dp"
   	        android:layout_marginLeft="10dp"
   	        />
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent" 	        
   	        android:text="系统通知"
   	        android:gravity="center_vertical"
   	        android:textSize="20sp"
   	        android:textColor="@color/grey21"
   	        android:layout_marginLeft="10dp"
   	        />
   	    <TextView 
   	        android:id="@+id/message_system_count"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:drawablePadding="15dp"
   	        android:text="0"
   	        android:gravity="center_vertical|right"
   	        android:textSize="20sp"
   	        android:textColor="@color/orange"
   	        android:drawableRight="@drawable/login_icon_go"
   	        android:layout_marginRight="10dp"
   	        />
   	     
   	    
   	</LinearLayout>
   	<ImageView 
  		android:layout_width="fill_parent"
   	    android:layout_height="1dp"
   	    android:src="@color/note_gray"/>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="@drawable/message_list_item_bg"
   	    android:onClick="true"
   	    android:padding="5dp"
   	    >
   	    <ImageView 
   	        android:layout_width="60dp"
   	        android:layout_height="60dp"
   	        android:src="@drawable/users"
   	        android:padding="10dp"
   	        android:layout_marginLeft="10dp"
   	        />
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:layout_marginLeft="10dp"
   	        android:text="新的粉丝"
   	        android:gravity="center_vertical"
   	        android:textSize="20sp"
   	        android:textColor="@color/grey21"
   	        />
   	     
   	    <TextView 
   	        android:id="@+id/message_newfans_count"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:layout_marginRight="10dp"
   	        android:drawablePadding="15dp"
   	        android:text="0"
   	        android:gravity="center_vertical|right"
   	        android:textSize="20sp"
   	        android:textColor="@color/orange"
   	        android:drawableRight="@drawable/login_icon_go"
   	        />
   	    
   	    
   	</LinearLayout>
   	<ImageView 
  		android:layout_width="fill_parent"
   	    android:layout_height="1dp"
   	    android:src="@color/note_gray"/>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="@drawable/message_list_item_bg"
   	    android:onClick="true"
   	    android:padding="4dp"
   	    >
   	    <ImageView 
   	        android:layout_width="55dp"
   	        android:layout_height="55dp"
   	        android:padding="10dp"
   	        android:src="@drawable/message_comment"
   	        android:layout_marginLeft="10dp"
   	        />
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:layout_marginLeft="10dp"
   	        android:text="评论我的"
   	        android:gravity="center_vertical"
   	        android:textSize="20sp"
   	        android:textColor="@color/grey21"
   	        />
   	     
   	    <TextView 
   	        android:id="@+id/message_comment_count"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:layout_marginRight="10dp"
   	        android:drawablePadding="15dp"
   	        android:text="0"
   	        android:gravity="center_vertical|right"
   	        android:textSize="20sp"
   	        android:textColor="@color/orange"
   	        android:drawableRight="@drawable/login_icon_go"
   	        />
   	     
   	    
   	</LinearLayout>
   	<ImageView 
  		android:layout_width="fill_parent"
   	    android:layout_height="1dp"
   	    android:src="@color/note_gray"/>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="@drawable/message_list_item_bg"
   	    android:onClick="true"
   	    android:padding="4dp"
   	    >
   	    <ImageView 
   	        android:layout_width="55dp"
   	        android:layout_height="55dp"
   	        android:padding="10dp"
   	        android:src="@drawable/message_share"
   	        android:layout_marginLeft="10dp"
   	        />
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:layout_marginLeft="10dp"
   	        android:text="分享我的"
   	        android:gravity="center_vertical|right"
   	        android:textSize="20sp"
   	        android:textColor="@color/grey21"
   	        />
   	     
   	    <TextView 
   	        android:id="@+id/message_share_count"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:layout_marginRight="10dp"
   	        android:drawablePadding="15dp"
   	        android:text="0"
   	        android:gravity="center_vertical|right"
   	        android:textSize="20sp"
   	        android:textColor="@color/orange"
   	        android:drawableRight="@drawable/login_icon_go"
   	        />
   	    
   	    
   	</LinearLayout>
   	<ImageView 
  		android:layout_width="fill_parent"
   	    android:layout_height="1dp"
   	    android:src="@color/note_gray"/>
   	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="horizontal"
   	    android:background="@drawable/message_list_item_bg"
   	    android:onClick="true"
   	    android:padding="4dp"
   	    >
   	    <ImageView 
   	        android:layout_width="55dp"
   	        android:layout_height="55dp"
   	        android:padding="10dp"
   	        android:src="@drawable/message_thumbs_up"
   	        android:layout_marginLeft="10dp"
   	        />
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="match_parent"
   	        android:layout_marginLeft="10dp"
   	        android:text="赞过我的"
   	        android:gravity="center_vertical"
   	        android:textSize="20sp"
   	        android:textColor="@color/grey21"
   	        />
   	     
   	    <TextView 
   	        android:id="@+id/message_like_count"
   	        android:layout_width="match_parent"
   	        android:layout_height="match_parent"
   	        android:layout_marginRight="10dp"
   	        android:drawablePadding="15dp"
   	        android:text="0"
   	        android:gravity="center_vertical|right"
   	        android:textSize="20sp"
   	        android:textColor="@color/orange"
   	        android:drawableRight="@drawable/login_icon_go"
   	        />
   	     
   	    
   	</LinearLayout>
   	<ImageView 
  		android:layout_width="fill_parent"
   	    android:layout_height="1dp"
   	    android:src="@color/note_gray"/>
   	
</LinearLayout>